@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (Context.User.Identity.IsAuthenticated)
{
    <span class="nav-link text-info">Olá, <b>@Context.User.Identity.Name</b>!</span>
    <a class="nav-link pe-0" asp-controller="Usuario" asp-action="Logout">Sair</a>
}
else
{
    <a class="nav-link pe-0" asp-controller="Usuario" asp-action="Login">Entrar</a>
}